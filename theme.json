{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "color": {
            "palette": [
                {
                    "slug": "primary",
                    "color": "#fe8802",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#da1b60",
                    "name": "Secondary"
                },
                {
                    "slug": "background",
                    "color": "#000000",
                    "name": "Background"
                },
                {
                    "slug": "text",
                    "color": "#ffffff",
                    "name": "Text"
                },
                {
                    "slug": "accent",
                    "color": "#ff8a00",
                    "name": "Accent"
                },
                {
                    "slug": "header-gradient-start",
                    "color": "#ff8a00",
                    "name": "Header Gradient Start"
                },
                {
                    "slug": "header-gradient-end",
                    "color": "#da1b60",
                    "name": "Header Gradient End"
                },
                {
                    "slug": "dark-bg",
                    "color": "#1e1e1e",
                    "name": "Dark Background"
                },
                {
                    "slug": "light-text",
                    "color": "#cacaca",
                    "name": "Light Text"
                },
                {
                    "slug": "footer-text",
                    "color": "#848d95",
                    "name": "Footer Text"
                }
            ],
            "gradients": [
                {
                    "slug": "header-gradient",
                    "gradient": "linear-gradient(to right, #ff8a00, #da1b60)",
                    "name": "Header Gradient"
                },
                {
                    "slug": "site-branding-gradient",
                    "gradient": "radial-gradient(circle at top right, #000000, #211d18)",
                    "name": "Site Branding Gradient"
                },
                {
                    "slug": "site-title-gradient",
                    "gradient": "linear-gradient(to right, #f00 3%, #630000 120%)",
                    "name": "Site Title Gradient"
                }
            ],
            "customDuotone": false,
            "defaultDuotone": false,
            "defaultGradients": false,
            "defaultPalette": false,
            "custom": true,
            "link": true
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Roboto-Regular, sans-serif",
                    "slug": "roboto",
                    "name": "Roboto"
                },
                {
                    "fontFamily": "Courgette-Regular, cursive",
                    "slug": "courgette",
                    "name": "Courgette"
                },
                {
                    "fontFamily": "Montserrat-Regular, sans-serif",
                    "slug": "montserrat",
                    "name": "Montserrat"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.8rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.5rem",
                    "name": "Large"
                },
                {
                    "slug": "x-large",
                    "size": "2em",
                    "name": "Extra Large"
                }
            ],
            "customFontSize": true
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "units": [
                "px",
                "em",
                "rem",
                "vh",
                "vw",
                "%"
            ],
            "spacingSizes": [
                {
                    "slug": "small",
                    "size": "0.5rem",
                    "name": "Small"
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Medium"
                },
                {
                    "slug": "large",
                    "size": "1.5rem",
                    "name": "Large"
                }
            ]
        },
        "layout": {
            "contentSize": "1200px",
            "wideSize": "1440px"
        },
        "border": {
            "color": true,
            "radius": true,
            "style": true,
            "width": true
        },
        "custom": {
            "headerHeight": "310px",
            "headerHeightTablet": "350px",
            "borderBottomRightRadius": "80px"
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--background)",
            "text": "var(--wp--preset--color--text)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--montserrat)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.5"
        },
        "elements": {
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--courgette)",
                    "fontSize": "var(--wp--preset--font-size--x-large)",
                    "lineHeight": "1.3"
                },
                "spacing": {
                    "margin": {
                        "top": "0.67em",
                        "bottom": "0.67em"
                    }
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--courgette)",
                    "lineHeight": "1.3"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--courgette)",
                    "lineHeight": "1.3"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--courgette)",
                    "lineHeight": "1.3"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--courgette)",
                    "lineHeight": "1.3"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--courgette)",
                    "lineHeight": "1.3"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--light-text)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--text)"
                    }
                },
                ":focus": {
                    "color": {
                        "text": "var(--wp--preset--color--text)"
                    }
                }
            }
        },
        "blocks": {
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--courgette)",
                    "fontSize": "1.5em"
                },
                "color": {
                    "background": "var(--wp--preset--gradient--site-title-gradient)",
                    "text": "var(--wp--preset--color--text)"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--text)"
                        },
                        ":hover": {
                            "color": {
                                "text": "#f1f1f1"
                            }
                        }
                    }
                }
            },
            "core/site-tagline": {
                "typography": {
                    "fontSize": "0.8em"
                },
                "color": {
                    "background": "rgba(6, 6, 6, 0.8)",
                    "text": "var(--wp--preset--color--text)"
                },
                "border": {
                    "radius": "20px"
                },
                "spacing": {
                    "padding": "10px"
                }
            },
            "core/navigation": {
                "color": {
                    "background": "var(--wp--preset--gradient--header-gradient)",
                    "text": "var(--wp--preset--color--text)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--roboto)",
                    "fontSize": "0.8em"
                }
            },
            "core/paragraph": {
                "spacing": {
                    "margin": {
                        "bottom": "1.5em"
                    }
                },
                "typography": {
                    "lineHeight": "1.6"
                }
            },
            "core/post-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--courgette)",
                    "fontSize": "1.5rem"
                },
                "color": {
                    "text": "var(--wp--preset--color--text)"
                }
            },
            "core/post-excerpt": {
                "typography": {
                    "fontSize": "0.8rem"
                }
            },
            "core/post-date": {
                "typography": {
                    "fontSize": "0.8rem"
                },
                "color": {
                    "text": "#ccc"
                }
            },
            "core/post-author": {
                "typography": {
                    "fontSize": "0.8rem"
                },
                "color": {
                    "text": "#ccc"
                }
            },
            "core/comments-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--roboto)",
                    "fontSize": "1.6rem"
                },
                "border": {
                    "bottom": {
                        "width": "1px",
                        "style": "solid"
                    }
                }
            },
            "core/comment-author-name": {
                "typography": {
                    "fontFamily": "sans-serif",
                    "fontSize": "1rem",
                    "fontWeight": "600"
                }
            },
            "core/comment-content": {
                "spacing": {
                    "margin": {
                        "left": "3rem"
                    }
                }
            },
            "core/comment-reply-link": {
                "typography": {
                    "fontFamily": "sans-serif",
                    "fontSize": "11px",
                    "fontWeight": "500",
                    "letterSpacing": "1px"
                },
                "color": {
                    "background": "#222",
                    "text": "var(--wp--preset--color--text)"
                },
                "border": {
                    "width": "1px",
                    "style": "solid",
                    "color": "#222"
                },
                "spacing": {
                    "padding": {
                        "top": "10px",
                        "right": "15px",
                        "bottom": "10px",
                        "left": "15px"
                    }
                }
            },
            "core/button": {
                "border": {
                    "radius": "3px",
                    "width": "1px",
                    "style": "solid",
                    "color": "#ccc #ccc #bbb"
                },
                "color": {
                    "background": "#0b0b0b",
                    "text": "var(--wp--preset--color--text)"
                },
                "typography": {
                    "fontSize": "0.75rem",
                    "lineHeight": "1"
                },
                "spacing": {
                    "padding": {
                        "top": "0.6em",
                        "right": "1em",
                        "bottom": "0.4em",
                        "left": "1em"
                    }
                },
                ":hover": {
                    "border": {
                        "color": "#ccc #bbb #aaa"
                    }
                }
            },
            "core/categories": {
                "typography": {
                    "fontSize": "0.8rem"
                }
            },
            "core/tag-cloud": {
                "typography": {
                    "fontSize": "0.8rem"
                }
            }
        },
        "sections": {
            "header": {
                "color": {
                    "background": "var(--wp--preset--gradient--header-gradient)"
                },
                "spacing": {
                    "margin": {
                        "top": "0",
                        "bottom": "0"
                    }
                }
            },
            "footer": {
                "color": {
                    "background": "#000000",
                    "text": "var(--wp--preset--color--footer-text)"
                },
                "typography": {
                    "fontSize": "0.8rem",
                    "fontFamily": "sans-serif"
                },
                "spacing": {
                    "padding": {
                        "top": "10px",
                        "bottom": "10px"
                    }
                }
            }
        }
    },
    "templateParts": [
        {
            "name": "header",
            "area": "header"
        },
        {
            "name": "footer",
            "area": "footer"
        }
    ],
    "customTemplates": [
        {
            "name": "page-no-sidebar",
            "title": "Page (No Sidebar)",
            "postTypes": [
                "page"
            ]
        },
        {
            "name": "single-post",
            "title": "Single Post",
            "postTypes": [
                "post"
            ]
        }
    ]
}